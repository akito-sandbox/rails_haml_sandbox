- form_for(merchandise) do |f|
  - if merchandise.errors.any?
    #error_explanation
      %h2
        = pluralize(merchandise.errors.count, "error")
        prohibited this merchandise from being saved:

      %ul
      - merchandise.errors.full_messages.each do |message|
        %li= message

  %div.field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :price
    = f.number_field :price

  .field
    = f.label :description
    = f.text_area :description

  .actions
    = f.submit
